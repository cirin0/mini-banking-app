generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Currency {
  UAH
  USD
  EUR
}

enum CardType {
  DEBIT
  CREDIT
  PAYROLL
}

enum PaymentSystem {
  VISA
  MASTERCARD
}

model User {
  id           String    @id @default(cuid())
  fullName     String
  email        String    @unique
  password     String
  accounts     Account[]
  refreshToken String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Account {
  id        String   @id @default(cuid())
  balance   Decimal  @default(0.0)
  currency  Currency
  cards     Card[]
  userId    String
  User      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Card {
  id                   String        @id @default(cuid())
  cardNumber           String        @unique
  cardType             CardType
  expiryDate           DateTime
  hashedCvv            String?
  paymentSystem        PaymentSystem @default(VISA)
  accountId            String
  account              Account       @relation(fields: [accountId], references: [id])
  sentTransactions     Transaction[] @relation("SentTransactions")
  receivedTransactions Transaction[] @relation("ReceivedTransactions")
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt

  @@index([accountId])
}

model Transaction {
  id          String   @id @default(cuid())
  amount      Decimal
  currency    Currency
  description String?
  createdAt   DateTime @default(now())

  fromCardId String
  fromCard   Card   @relation("SentTransactions", fields: [fromCardId], references: [id])

  toCardId String
  toCard   Card   @relation("ReceivedTransactions", fields: [toCardId], references: [id])

  @@index([fromCardId])
  @@index([toCardId])
}
